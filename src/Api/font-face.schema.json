{
    "$schema": "http://json-schema.org/draft-04/schema",
    "$id": "https://example.com/fonts-face.schema.json",
    "title": "Font faces",
    "description": "Font face item specification for the REST API's payload",
    "type": "object",
    "properties": {
        "id" : {
            "description": "The ID of the font face generated by nanoid",
            "type": "string"
        },
        "weight": {
            "description": "The weight of the font face, e.g. 100, 200, 300 700, 800",
            "type": "string"
        },
        "style": {
            "description": "The style of the font face",
            "type": "string",
            "enum": [
                "normal",
                "italic",
                "oblique"
            ]
        },
        "display": {
            "description": "The display of the font face. can be empty to use from the fallback",
            "type": "string",
            "enum": [
                "swap",
                "block",
                "fallback",
                "optional",
                "auto"
            ]
        },
        "selector": {
            "description": "The selector of the font face",
            "type": "string"
        },
        "commnet": {
            "description": "The comment of the font face",
            "type": "string"
        },
        "unicodeRange": {
            "description": "The unicode range of the font face",
            "type": "string"
        },
        "files": {
            "description": "The files of the font face",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "uid": {
                        "description": "The ID of the file generated by nanoid",
                        "type": "string"
                    },
                    "attachment_id": {
                        "description": "The ID of the file on the WordPress media library",
                        "type": "integer"
                    },
                    "attachment_url": {
                        "description": "The URL of the file on the WordPress media library",
                        "type": "string"
                    },
                    "extension": {
                        "description": "The extension of the file",
                        "type": "string",
                        "enum": [
                            "woff",
                            "woff2",
                            "ttf",
                            "otf",
                            "eof"
                        ]
                    },
                    "mime": {
                        "description": "The mime type of the file",
                        "type": "string",
                        "enum": [
                            "font/woff2",
                            "font/woff",
                            "font/ttf",
                            "font/otf",
                            "font/eof"
                        ]
                    },
                    "filesize": {
                        "description": "The filesize of the file in bytes",
                        "type": "integer"
                    },
                    "name": {
                        "description": "The name of the file without extension",
                        "type": "string"
                    }
                },
                "required": [
                    "uid",
                    "attachment_id",
                    "attachment_url",
                    "extension",
                    "mime",
                    "filesize",
                    "name"
                ]
            }
        }
    },
    "required": [
        "id",
        "weight",
        "style",
        "files"
    ]
}