{
    "$schema": "http://json-schema.org/draft-04/schema",
    "$id": "https://example.com/fonts-store.schema.json",
    "title": "Fonts/Store",
    "description": "Payload for the fonts/store endpoint",
    "type": "object",
    "properties": {
        "title": {
            "description": "The title of the font",
            "type": "string"
        },
        "family": {
            "description": "The family of the font",
            "type": "string"
        },
        "selector": {
            "description": "Predefined CSS selector for the font",
            "type": "string"
        },
        "display": {
            "description": "The display of the font",
            "type": "string",
            "enum": [
                "swap",
                "block",
                "fallback",
                "optional",
                "auto"
            ]
        },
        "preload": {
            "description": "Preload the font",
            "type": "boolean"
        },
        "status": {
            "description": "The publish status of the font",
            "type": "boolean"
        },
        "font_faces": {
            "description": "The collection of font faces",
            "type": "array",
            "items": {
                "$ref": "https://example.com/fonts-face.schema.json"
            }
        }
    },
    "required": [
        "title",
        "family",
        "display",
        "preload",
        "status"
    ]
}